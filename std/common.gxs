; ______________________________________________________________________________
;
;  gxarch standard library - common definitions
; ______________________________________________________________________________
;
;  Reserved registers
; ______________________________________________________________________________
;
reg rVal %48    ; function return value, set by retv instruction
reg mouseX %49  ; mouse X position
reg mouseY %50  ; mouse Y position
reg mouseL %51  ; mouse left button
reg mouseR %52  ; mouse right button
reg kUp %53     ; up arrow/W
reg kDown %54   ; down arrow/S
reg kLeft %55   ; left arrow/A
reg kRight %56  ; right arrow/D
reg kAct1 %57   ; first action key/J
reg kAct2 %58   ; second action key/K
reg kAct3 %59   ; third action key/L
reg clearX %60  ; screen clear color, X from tileset
reg clearY %61  ; screen clear color, Y from tileset
reg rand %62    ; random number
reg resH %63    ; arithmetic result high byte

; ______________________________________________________________________________
;
;  System calls
; ______________________________________________________________________________
;
val SYS_DRAW 0
val SYS_END 1
val SYS_SOUND 2

; ______________________________________________________________________________
;
;  Sound types
; ______________________________________________________________________________
;
val SND_SQUARE 0
val SND_SAWTOOTH 1
val SND_SINE 2
val SND_NOISE 3