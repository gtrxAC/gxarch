dat main            ; all programs must start with "dat" and the label where the program starts
dat "Hello world!"

#include lib/print.gxs

main:
	set %0 0x00 ; address of the string we want to print
	set %1 0x02 ; currently this has to be hardcoded
	set %2 0    ; draw it at 0, 0
	set %3 0
	js print    ; call print subroutine
	end         ; draw frame
	jmp main