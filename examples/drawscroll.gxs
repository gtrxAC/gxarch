; %0 = scroll counter
; %1 = 1 (scroll increment)
; %2 = 0 (draw location)
; %3 = 128 (screen size)

dat main         ; program entry point

main:
	set %1 1
	set %2 0
	set %3 128

loop:
	add %0 %1 %0 ; increment scroll counter
	dw  %0 %0 %3 ; take a 128Ã—128 area from the tileset at %0, %0
	at  %2 %2    ; and draw it at 0, 0
	end          ; draw frame
	jmp loop